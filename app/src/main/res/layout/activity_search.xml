<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center">


    <ImageView
        android:layout_width="390dp"
        android:layout_height="100dp"
        app:srcCompat="@color/traffic_red"
        android:id="@+id/imageView3"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:text=" Your Location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/locationText"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:textSize="22sp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textColor="@color/white_text"
        android:drawableLeft="@mipmap/location_64"
        android:drawableRight="@mipmap/keyboard_arrow_down_white_108x108"/>

    <EditText
        android:drawableLeft="@mipmap/ic_search_black_24dp"
        android:layout_width="260dp"
        android:layout_height="36dip"
        android:background="@drawable/bg_edittext"
        android:padding="5dip"
        android:textColorHint="#AAAAAA"
        android:width="50dp"
        android:hint="Search for foods..."
        android:layout_marginLeft="36dip"
        android:layout_marginRight="36dip"
        android:layout_marginTop="60dp"
        android:layout_marginStart="19dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true"
        android:id="@+id/search_edit_text"
        android:imeOptions="actionSearch"
        android:singleLine="true"
        />



    <Button
        android:text="Cancel"
        android:layout_width="90dp"
        android:layout_height="36dip"
        android:id="@+id/cancelButton"
        android:textAppearance="@style/TextAppearance.AppCompat"
        android:background="@color/traffic_red"
        android:textColor="@color/white"
        android:layout_alignTop="@+id/search_edit_text"
        android:layout_toEndOf="@+id/search_edit_text"
        android:textSize="16sp"
        style="?android:attr/borderlessButtonStyle"/>

    <ListView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/searchListView"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/imageView3" />


</RelativeLayout>